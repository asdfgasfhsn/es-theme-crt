<theme>
   <formatVersion>4</formatVersion>

   <view name="system,basic,detailed">
      <helpsystem name="help">
         <textColor>777777</textColor>
         <iconColor>777777</iconColor>
      </helpsystem>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <path>./../images/background.png</path>
      </image>
   </view>

   <view name="basic,detailed">
      <image name="logo">
         <origin>0.5 0</origin>
         <pos>0.5 0.0694444444444444</pos>
         <maxSize>0.234375 0.05555555555556</maxSize>
      </image>
