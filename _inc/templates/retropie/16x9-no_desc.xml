      </textlist>
   </view>

   <view name="detailed">
      <image name="crt-bezel" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.32734375 0.3666666666666667</pos>
         <maxSize>0.2671875 0.3638888888888889</maxSize>
         <path>./../../images/crt-bezel.svg</path>
      </image>
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.32734375 0.3666666666666667</pos>
         <maxSize>0.25 0.3333333333333333</maxSize>
      </image>
      <image name="crt-screen" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.32734375 0.3666666666666667</pos>
         <maxSize>0.25 0.3333333333333333</maxSize>
         <path>./../../images/crt-screen.svg</path>
      </image>
   </view>

   <feature supported="video">
      <view name="video">
         <image name="crt-bezel" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.32734375  0.45333333333337</pos>
            <maxSize>0.43210 0.555</maxSize>
            <path>./../../images/crt-bezel.svg</path>
         </image>
         <image name="md_image">
            <origin>1 1</origin>
            <pos>0.52 0.9</pos>
            <maxSize>0.15 0.15</maxSize>
         </image>
         <image name="md_marquee">
            <origin>0 1</origin>
            <pos>0.15 0.68</pos>
            <maxSize>0.1015625 0.1805555555555556</maxSize>
         </image>
         <video name="md_video">
            <origin>0.46155 0.45155</origin>
            <pos>0.31734375  0.43333333333337</pos>
            <maxSize>0.382 0.502</maxSize>
            <delay>0.5</delay>
            <default>./../../videos/static.mp4</default>
            <showSnapshotNoVideo>false</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
         </video>
      </view>
   </feature>

   <feature supported="z-index">
      <view name="detailed,video">
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="md_image">
            <zIndex>80</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="md_image">
            <zIndex>120</zIndex>
         </image>
         <image name="md_marquee">
            <zIndex>120</zIndex>
         </image>
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <video name="md_video">
            <zIndex>80</zIndex>
         </video>
         <image name="crt-screen" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.32734375  0.45333333333337</pos>
            <maxSize>0.39 0.51</maxSize>
            <path>./../../images/crt-screen.svg</path>
            <zIndex>60</zIndex>
         </image>
      </view>
   </feature>

</theme>
